<meta charset="UTF-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
    body{
        padding: 0;
        margin: 0;
        font-family: 'Courier New', Courier, monospace;
    }
    .container{
        display: flex;
        flex-direction: column;
        height: 100vh;
    }
    #header{
        flex-shrink: 0;
        background-color: rgb(131, 18, 18);
        display: flex;
        justify-content: space-between;
        color: white;
        padding: 0 100px;
    }
    #header div{
        padding: 15px 0;
    }
    #header div img{
        width: 50px;
        height: 50px;
    }
    #header div ul{
        list-style: none;
    }
    #header div ul li{
        display: inline;
    }
    #footer{
        flex-shrink: 0;
        background-color: rgb(70, 7, 7);
        display: flex;
        justify-content: center;
        padding: 10px;
    }
    #main{
        flex: 1 0 auto;
    }
</style>